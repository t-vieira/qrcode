# QR Code SaaS Platform - Shared Hosting Environment Configuration
# Para servidor compartilhado - qr.fluxti.com.br

APP_NAME="QR Code SaaS"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://qr.fluxti.com.br

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration (PostgreSQL no servidor compartilhado)
DB_CONNECTION=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=qr_fluxti_production
DB_USERNAME=qr_fluxti_user
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD

# Cache Configuration (usar file cache em servidor compartilhado)
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis Configuration (se disponível no servidor compartilhado)
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.fluxti.com.br
MAIL_PORT=587
MAIL_USERNAME=noreply@qr.fluxti.com.br
MAIL_PASSWORD=YOUR_MAIL_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@qr.fluxti.com.br
MAIL_FROM_NAME="${APP_NAME}"

# Mercado Pago Configuration
MERCADOPAGO_ACCESS_TOKEN=YOUR_MERCADOPAGO_ACCESS_TOKEN
MERCADOPAGO_PUBLIC_KEY=YOUR_MERCADOPAGO_PUBLIC_KEY
MERCADOPAGO_PLAN_ID=YOUR_MERCADOPAGO_PLAN_ID
MERCADOPAGO_WEBHOOK_SECRET=YOUR_MERCADOPAGO_WEBHOOK_SECRET
MERCADOPAGO_SUCCESS_URL=https://qr.fluxti.com.br/subscription/success
MERCADOPAGO_FAILURE_URL=https://qr.fluxti.com.br/subscription/failure
MERCADOPAGO_PENDING_URL=https://qr.fluxti.com.br/subscription/pending

# WhatsApp Business API Configuration
WHATSAPP_ACCESS_TOKEN=YOUR_WHATSAPP_ACCESS_TOKEN
WHATSAPP_PHONE_NUMBER_ID=YOUR_WHATSAPP_PHONE_NUMBER_ID
WHATSAPP_APP_ID=YOUR_WHATSAPP_APP_ID
WHATSAPP_APP_SECRET=YOUR_WHATSAPP_APP_SECRET
WHATSAPP_VERIFY_TOKEN=YOUR_WHATSAPP_VERIFY_TOKEN
WHATSAPP_DEFAULT_TEMPLATE_NAME=YOUR_DEFAULT_TEMPLATE
WHATSAPP_TRIAL_EXPIRING_DAYS=3
WHATSAPP_BUSINESS_HOURS_START=09:00
WHATSAPP_BUSINESS_HOURS_END=18:00
WHATSAPP_AUTO_REPLY_MESSAGE="Obrigado por entrar em contato! Nossa equipe retornará em breve."

# Google reCAPTCHA Configuration
RECAPTCHA_SITE_KEY=YOUR_RECAPTCHA_SITE_KEY
RECAPTCHA_SECRET_KEY=YOUR_RECAPTCHA_SECRET_KEY
RECAPTCHA_MIN_SCORE=0.5

# File Storage Configuration (usar local storage em servidor compartilhado)
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.qr.fluxti.com.br
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Security Configuration
BCRYPT_ROUNDS=12
HASH_VERIFY=true
SANCTUM_STATEFUL_DOMAINS=qr.fluxti.com.br,www.qr.fluxti.com.br
SANCTUM_GUARD=web

# Rate Limiting Configuration (usar file cache)
RATE_LIMITING_DRIVER=file
RATE_LIMITING_MONITORING=true
RATE_LIMITING_ALERT_EMAIL=admin@qr.fluxti.com.br

# Performance Configuration (otimizado para servidor compartilhado)
OPCACHE_ENABLE=true
OPCACHE_MEMORY_CONSUMPTION=64
OPCACHE_INTERNED_STRINGS_BUFFER=4
OPCACHE_MAX_ACCELERATED_FILES=2000
OPCACHE_REVALIDATE_FREQ=2
OPCACHE_FAST_SHUTDOWN=1

# Monitoring Configuration (opcional em servidor compartilhado)
# SENTRY_LARAVEL_DSN=YOUR_SENTRY_DSN
# SENTRY_TRACES_SAMPLE_RATE=0.1
# SENTRY_PROFILES_SAMPLE_RATE=0.1

# Backup Configuration
BACKUP_DISK=local
BACKUP_NOTIFICATION_MAIL=admin@qr.fluxti.com.br
BACKUP_RETENTION_DAYS=30

# Custom Domain Configuration
CUSTOM_DOMAIN_ENABLED=true
CUSTOM_DOMAIN_VERIFICATION_REQUIRED=true
CUSTOM_DOMAIN_DNS_TTL=300
CUSTOM_DOMAIN_BASE=qr.fluxti.com.br

# QR Code Configuration
QR_CODE_MAX_RESOLUTION=1500
QR_CODE_MIN_RESOLUTION=100
QR_CODE_SUPPORTED_FORMATS=png,jpg,svg,eps
QR_CODE_MAX_FILE_SIZE=5242880
QR_CODE_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,image/svg+xml

# Subscription Configuration
TRIAL_DAYS=7
SUBSCRIPTION_PLAN_PRICE=29.90
SUBSCRIPTION_PLAN_CURRENCY=BRL
SUBSCRIPTION_GRACE_PERIOD_DAYS=3

# Support Configuration
SUPPORT_WHATSAPP_NUMBER=+5511999999999
SUPPORT_EMAIL=support@qr.fluxti.com.br
SUPPORT_BUSINESS_HOURS_START=09:00
SUPPORT_BUSINESS_HOURS_END=18:00
SUPPORT_TIMEZONE=America/Sao_Paulo

# Analytics Configuration
GOOGLE_ANALYTICS_ID=YOUR_GA_ID
GOOGLE_TAG_MANAGER_ID=YOUR_GTM_ID
FACEBOOK_PIXEL_ID=YOUR_FB_PIXEL_ID

# Feature Flags (adaptado para servidor compartilhado)
FEATURE_TEAMS_ENABLED=true
FEATURE_CUSTOM_DOMAINS_ENABLED=true
FEATURE_WHATSAPP_SUPPORT_ENABLED=true
FEATURE_ADVANCED_ANALYTICS_ENABLED=false
FEATURE_API_ACCESS_ENABLED=false

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Estamos em manutenção. Voltaremos em breve!"

# Development/Testing (should be false in production)
DEVELOPMENT_MODE=false
TESTING_MODE=false
DEBUG_BAR_ENABLED=false
TELESCOPE_ENABLED=false

# Shared Hosting Specific Configuration
SHARED_HOSTING=true
QUEUE_DRIVER=sync
CACHE_DRIVER=file
SESSION_DRIVER=file
LOG_DRIVER=file

# File Permissions (para servidor compartilhado)
FILE_PERMISSIONS=644
DIRECTORY_PERMISSIONS=755
STORAGE_PERMISSIONS=755

# Memory and Time Limits (adaptado para servidor compartilhado)
MEMORY_LIMIT=256M
MAX_EXECUTION_TIME=300
UPLOAD_MAX_FILESIZE=10M
POST_MAX_SIZE=10M

# Security (adaptado para servidor compartilhado)
DISABLE_FUNCTIONS=exec,passthru,shell_exec,system,proc_open,popen
ALLOW_URL_FOPEN=Off
ALLOW_URL_INCLUDE=Off
EXPOSE_PHP=Off
