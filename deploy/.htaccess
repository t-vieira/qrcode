# QR Code SaaS Platform - Apache Configuration
# Para servidor compartilhado

# Habilitar mod_rewrite
RewriteEngine On

# Redirecionar HTTP para HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirecionar www para não-www (opcional)
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Bloquear acesso a arquivos sensíveis
<FilesMatch "\.(env|log|sql|bak|backup|old|tmp)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Bloquear acesso a diretórios sensíveis
RedirectMatch 403 ^/vendor/
RedirectMatch 403 ^/storage/logs/
RedirectMatch 403 ^/bootstrap/cache/
RedirectMatch 403 ^/config/
RedirectMatch 403 ^/database/
RedirectMatch 403 ^/resources/
RedirectMatch 403 ^/tests/
RedirectMatch 403 ^/artisan$

# Bloquear acesso a arquivos PHP em uploads
<FilesMatch "\.php$">
    <If "%{REQUEST_URI} =~ m#^/storage/app/public/#">
        Order allow,deny
        Deny from all
    </If>
</FilesMatch>

# Headers de segurança
<IfModule mod_headers.c>
    # Security Headers
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    
    # Content Security Policy
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.google.com https://www.gstatic.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: blob: https:; connect-src 'self' https://api.mercadopago.com https://graph.facebook.com https://api.whatsapp.com; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'none';"
    
    # Strict Transport Security (apenas em HTTPS)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" env=HTTPS
</IfModule>

# Compressão Gzip
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Cache de arquivos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Imagens
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    
    # CSS e JavaScript
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"
    
    # Fontes
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # QR Codes
    ExpiresByType image/png "access plus 1 year" env=QR_CODE
</IfModule>

# Rate Limiting (se mod_security estiver disponível)
<IfModule mod_security2.c>
    # Regras básicas de rate limiting
    SecRule IP:REQUEST_COUNT "@gt 100" "phase:1,deny,status:429,msg:'Rate limit exceeded'"
    SecRule IP:REQUEST_COUNT "@gt 5" "phase:1,deny,status:429,msg:'Login rate limit exceeded'" "chain"
    SecRule REQUEST_URI "@contains /login"
</IfModule>

# Bloquear user agents suspeitos
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_USER_AGENT} (bot|crawler|spider|scanner|sqlmap|nikto|nmap|masscan|zap|burp|w3af|acunetix|nessus|openvas) [NC]
    RewriteRule .* - [F,L]
</IfModule>

# Bloquear tentativas de acesso a arquivos sensíveis
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_URI} (\.env|composer\.json|package\.json|artisan|phpinfo|test\.php|admin|wp-admin|wp-login|administrator|phpmyadmin|mysql|sql|backup|backups) [NC]
    RewriteRule .* - [F,L]
</IfModule>

# Laravel - Redirecionar todas as requisições para index.php
<IfModule mod_rewrite.c>
    # Handle QR Code redirects (short URLs)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} ^/([a-zA-Z0-9]{6,})$
    RewriteRule ^(.*)$ /index.php [QSA,L]
    
    # Handle all other requests
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ /index.php [QSA,L]
</IfModule>

# Configurações específicas para QR Codes
<IfModule mod_rewrite.c>
    # Marcar requisições de QR Codes para cache
    RewriteCond %{REQUEST_URI} ^/storage/qrcodes/
    RewriteRule .* - [E=QR_CODE:1]
</IfModule>

# Bloquear acesso direto a arquivos PHP em storage
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_URI} ^/storage/.*\.php$
    RewriteRule .* - [F,L]
</IfModule>

# Configurações de upload
php_value upload_max_filesize 10M
php_value post_max_size 10M
php_value max_execution_time 300
php_value memory_limit 256M

# Configurações de sessão
php_value session.cookie_secure 1
php_value session.cookie_httponly 1
php_value session.cookie_samesite Strict
php_value session.use_strict_mode 1

# Desabilitar exibição de erros em produção
php_flag display_errors Off
php_flag log_errors On
php_value error_log /path/to/error.log

# Configurações de segurança PHP
php_value expose_php Off
php_value allow_url_fopen Off
php_value allow_url_include Off
php_value disable_functions "exec,passthru,shell_exec,system,proc_open,popen,curl_exec,curl_multi_exec,parse_ini_file,show_source"

# Configurações de timezone
php_value date.timezone "America/Sao_Paulo"
